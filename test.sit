// CScriptSIT Test File
// This file tests syntax highlighting for .sit files

/* 
   Multi-line comment block
   Testing comment highlighting
*/
$sit_testreportstart "Test Report Title"
// Test Case Start
$sit_testcasestart "Sample Test Case"
$sit_testcaseinitcond "Initialize test environment"
$sit_TestCaseFailOnWfcFailure False 
// Control Flow Keywords
$sit_if condition == Yes
    $cs_print "Condition is true"
    $sit_delay 1000
$sit_ifelse
    $cs_echo "Condition is false"
$sit_ifend

// Loop Example
$sit_loop 5
    $cs_print "Loop iteration"
    $sit_delaytime 500
$sit_loopend

// Test Steps
$sit_teststepstart "Step 1: Verify Connection"
    $sit_verifyresult "Connection established"
    $sit_checkbits 0xFF 0x0F
$sit_teststepend

// String Examples
$sit_print "This is a test string with \"escaped quotes\""
$sit_addnote "Test note: checking functionality"

// Boolean Values
result = Yes
continue_test = No
optional = none

// Logic Analyzer
$sit_LogicAnalyzerStart 
$sit_LogicAnalyzerConfigure "channel1"
$sit_delay 2000
$sit_LogicAnalyzerStop
$sit_LogicAnalyzerSave 

// BLE Analyzer
$sit_bleanalyzerstart MDC_TEST_CASE
$sit_runscript INPUT.txt, OUTPUT.txt,5000
$sit_runscript None, OUTPUT.txt,5000
$sit_procedure MDC_TEST_CASE.sit
$sit_waitforuseraction "Press button to continue"
$sit_BleAnalyzerStop

// Manufacturing Data
$sit_mfgdataread "serial_number"
$sit_mfgdatawrite "calibration_data" 0x1234
$sit_mfgdatasetvar calValue 100
$sit_checktestresulteq #22, !nfc.gpi.gpidata.CurrentState
// Verification
$sit_verifyresultpending "Waiting for result"
$sit_checktestresulteq expected actual
$sit_comparebyteseq data1 data2

$sit_BleAnalyzerStop

// Utility Functions
$sit_clear
$sit_yesno "Do you want to continue?"
$sit_getpassfailfromuser "Did the LED turn on?"
$sit_waitforlifecount 10

// Documentation
$sit_materials "Equipment: Oscilloscope, Multimeter"
$sit_additionalmaterials "Cables, Power supply"
$sit_estefffort "30 minutes"
$sit_traceability "REQ-001, REQ-002"



// Special Keywords
completions:

// Test Case End
$sit_testcaseend

// Script Exit
$sit_exit 0