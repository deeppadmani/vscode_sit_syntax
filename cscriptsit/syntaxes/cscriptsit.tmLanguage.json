{
  "name": "CScriptSIT",
  "scopeName": "source.cscriptsit",
  "fileTypes": [".sit"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.cscriptsit",
          "match": "//.*$"
        },
        {
          "name": "comment.block.cscriptsit",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cscriptsit",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cscriptsit",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.cscriptsit",
          "match": "\\b0[xX][0-9A-Fa-f]+\\b"
        },
        {
          "name": "constant.numeric.decimal.cscriptsit",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bold.cscriptsit",
          "match": "(\\$sit_if|\\$sit_ifdef|\\$sit_ifdef_else|\\$sit_ifdef_end|\\$sit_ifelse|\\$sit_ifend|\\$sit_elseifdef|\\$sit_loop|\\$sit_loopend)\\b"
        },
        {
          "name": "entity.name.function.bold.test.cscriptsit",
          "match": "(\\$sit_testcasestart|\\$sit_testcaseend|\\$sit_testcaseinitcond|\\$sit_testreportstart|\\$sit_testreportend|\\$sit_teststepstart|\\$sit_teststepend|\\$sit_testsubstepstart|\\$sit_testuseraction|\\$sit_teststrategy|\\$sit_TestCaseFailOnWfcFailure)\\b"
        },
        {
          "name": "entity.name.function.bold.verification.cscriptsit",
          "match": "(\\$sit_verifyresult|\\$sit_verifyresultpending|\\$sit_checkbits|\\$sit_checktestresulteq|\\$sit_comparebyteseq|\\$sit_compareptfilecontenteq)\\b"
        },
        {
          "name": "entity.name.function.bold.analyzer.cscriptsit",
          "match": "(\\$sit_LogicAnalyzerStart|\\$sit_LogicAnalyzerStop|\\$sit_LogicAnalyzerSave|\\$sit_LogicAnalyzerConfigure|\\$sit_bleanalyzerstart|\\$sit_bleanlayzerstop)\\b"
        },
        {
          "name": "entity.name.function.bold.action.cscriptsit",
          "match": "(\\$sit_procedure|\\$sit_runscript|\\$sit_delay|\\$sit_delaytime|\\$sit_input|\\$sit_exit|\\$sit_starttimer|\\$sit_scripttimestart|\\$sit_scripttimestop)\\b"
        },
        {
          "name": "entity.name.function.bold.data.cscriptsit",
          "match": "(\\$sit_materials|\\$sit_additionalmaterials|\\$sit_estefffort|\\$sit_revieweffort|\\$sit_traceability|\\$sit_addnote|\\$sit_print)\\b"
        },
        {
          "name": "entity.name.function.bold.utility.cscriptsit",
          "match": "(\\$sit_clear|\\$sit_clearpatchdata|\\$sit_isbitset|\\$sit_isbitclear|\\$sit_loadptuoutputfile|\\$sit_getpassfailfromuser|\\$sit_getpassfailfromuserwithinput|\\$sit_yesno|\\$sit_waitforlifecount|\\$sit_waitforoneminnot1|\\$sit_waitforuseraction)\\b"
        },
        {
          "name": "entity.name.function.bold.mfg.cscriptsit",
          "match": "(\\$sit_mfgdataread|\\$sit_mfgdatawrite|\\$sit_mfgdatasetvar|\\$sit_mfgdatarestoredefault)\\b"
        },
        {
          "name": "entity.name.function.bold.cs.cscriptsit",
          "match": "(\\$cs_cslog|\\$cs_echo|\\$cs_exit|\\$cs_pause|\\$cs_print)\\b"
        },
        {
          "name": "constant.language.boolean.cscriptsit",
          "match": "\\b(Yes|No|none|continue)\\b"
        },
        {
          "name": "keyword.other.special.cscriptsit",
          "match": "^\\s*completions:\\s*$"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.cscriptsit",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.cscriptsit",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.cscriptsit",
          "match": "="
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.cscriptsit",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.cscriptsit",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}